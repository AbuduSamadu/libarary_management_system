<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane fx:id="rootPane" stylesheets="@dark-theme.css" xmlns="http://javafx.com/javafx/8.0.141"
           xmlns:fx="http://javafx.com/fxml/1" fx:controller="abudu.lms.library.controller.BookController">
    <AnchorPane fx:id="mainContainer" prefHeight="338.0" prefWidth="464.0" styleClass="custom-pane">
        <VBox prefHeight="256.0" prefWidth="404.0" spacing="10.0" AnchorPane.bottomAnchor="0.0"
              AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <padding>
                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0"/>
            </padding>
            <TextField fx:id="titleField" promptText="Book Title">
                <VBox.margin>
                    <Insets left="10.0" right="10.0" top="20.0"/>
                </VBox.margin>
            </TextField>
            <TextField fx:id="authorField" promptText="Book Author">
                <VBox.margin>
                    <Insets left="10.0" right="10.0" top="20.0"/>
                </VBox.margin>
            </TextField>
            <TextField fx:id="publisherField" promptText="Publisher">
                <VBox.margin>
                    <Insets left="10.0" right="10.0" top="20.0"/>
                </VBox.margin>
            </TextField>
            <TextField fx:id="yearField" promptText="Year">
                <VBox.margin>
                    <Insets left="10.0" right="10.0" top="20.0"/>
                </VBox.margin>
            </TextField>
            <HBox alignment="CENTER" prefHeight="47.0" prefWidth="404.0" spacing="30.0">
                <VBox.margin>
                    <Insets top="25.0"/>
                </VBox.margin>
                <padding>
                    <Insets bottom="20.0"/>
                </padding>
                <Button fx:id="saveButton" onAction="#addBook" prefHeight="66.0" prefWidth="100.0"
                        text="Save"/>
                <Button fx:id="cancelButton" onAction="#cancel" prefHeight="66.0" prefWidth="100.0"
                        text="Cancel"/>
            </HBox>
        </VBox>
    </AnchorPane>
</StackPane>