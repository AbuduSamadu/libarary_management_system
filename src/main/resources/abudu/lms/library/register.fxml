<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="abudu.lms.library.controller.UserRegistrationController"
          alignment="CENTER" hgap="10" vgap="10">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Name:"/>
    <TextField fx:id="nameField" GridPane.columnIndex="1"/>

    <Label text="Email:" GridPane.rowIndex="1"/>
    <TextField fx:id="emailField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>


    <Label text="Password:" GridPane.rowIndex="2"/>
    <TextField fx:id="passwordField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

    <Button text="Register" onAction="#registerUser" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
</GridPane>