<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/17.0.6" xmlns:fx="http://javafx.com/fxml/1" fx:controller="abudu.lms.library.controller.BookController">
    <children>
        <Label text="Book Details" />
        <TextField fx:id="titleField" promptText="Title" />
        <TextField fx:id="authorField" promptText="Author" />
        <TextField fx:id="publisherField" promptText="Publisher" />
        <DatePicker fx:id="yearPicker" promptText="Year" />
        <Button text="Save" onAction="#handleSave" />
        <Button text="Cancel" onAction="#handleCancel" />
    </children>
    <padding>
        <Insets top="20" right="20" bottom="20" left="20" />
    </padding>
    <spacing>10</spacing>
</VBox>